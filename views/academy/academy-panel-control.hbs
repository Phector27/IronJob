<div class="container-fluid profile">
    <h2 style="text-align: center;">Control de permisos de usuario</h2>
    <hr><br>
    <div class="row justify-content-around">
        {{#each allUsers}}
        <div class="col-lg-3 col-md-6 col-sm-10">
            <div class="card border-dark mb-5" style="max-width: 40rem;">
                <div class="card-header">Nombre: {{name}}</div>
                <div class="card-body text-dark">
                    <p class="card-text text-dark"><strong>Username: </strong> {{username}}</p>
                    <p class="card-text text-dark"><strong>Permisos: </strong> {{role}}</p>
                    <p class="card-text text-dark"><strong>ID: </strong> {{id}}</p>
                    <div class="card-footer bg-transparent border-success">
                        <div class="row justify-content-between">
                            <div class="col-5">
                                <a href="/academy/panel-control/edit?id={{id}}"
                                    class="btn btn-outline-dark btn-sm">Editar
                                    permisos</a>
                            </div>
                            <div class="col-5">
                                <a href="/academy/panel-control/delete?id={{id}}"
                                    class="btn btn-outline-danger btn-sm deletebtn">
                                    Eliminar usuario</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>