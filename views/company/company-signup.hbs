<div>
    <div class="login-box">
        <form method="POST" action="/company/signup">
            <h1>Signup</h1>
            <div class="textbox">
                <i class="fas fa-user"></i>
                <input type="text" placeholder="Username" name="username">
            </div>
            <div class="textbox">
                <i class="fas fa-lock"></i>
                <input type="password" name="password" placeholder="Password">
            </div>
            <div class="form-group">
                <label>Raz√≥n social / Nombre y apellidos</label>
                <p><small>Estudiante indica solo nombre y apellidos.</small></p>
                <input type="text" class="form-control" name="name">
            </div>
            <input type="submit" class="btn2" value="Sign up">
            {{#if errorMsg}}
            <div class="btn-outline-danger" style="text-align: center; padding: 5px;">
                {{errorMsg}}</div>
            {{/if}}
        </form>
    </div>
</div>